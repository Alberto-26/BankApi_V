<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kodin.mobilbank.ui.home.profile.ProfileFragment">

    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Bienvenido"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_idUser"
            android:layout_gravity="center_horizontal"
            tools:text="sebas"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--            android:text="@{viewmodel.user.username}"-->

        <TextView
            android:id="@+id/tv_idUserMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            tools:text="sebas@gmail.com"

            />



        <TextView
            android:id="@+id/tv_idDescriptionRole"
            android:layout_gravity="center_horizontal"

            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrar_usuarios"
            android:layout_gravity="center_horizontal"


            app:backgroundTint="#00695C"
            >

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_deleteRoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_delete_items"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="#00695C"
            >

        </com.google.android.material.button.MaterialButton>
        <!--            android:visibility="gone"-->
        <!--            android:text="@{viewmodel.user.roles.toString() }"-->
        <!--            android:visibility="@{!viewmodel.user.roles.toString().equals(`[ROLE_ADMIN]`) ? View.GONE : View.VISIBLE}"-->
        <!--            tools:text="roles"-->
    </LinearLayout>


</FrameLayout>

